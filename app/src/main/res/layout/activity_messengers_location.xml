<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:padding="15dp"
    tools:context=".MessengersLocation">


    <TextView
        android:id="@+id/messenger_panel_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/roundedcorner"
        android:gravity="center_horizontal"
        android:text="Messengers Location"
        android:textColor="@color/Black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/messenger_panel_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"

        android:layout_alignParentLeft="true"
        android:text="Name"
        android:textColor="@color/Black"
        android:textSize="24sp"
     />

    <TextView
        android:id="@+id/messenger_panel_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="130dp"
        android:layout_marginTop="116dp"
        android:text="Location"
        android:textColor="@color/Black"
        android:textSize="24sp"
      />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/messenger_panel_textView2"
        android:id="@+id/activity_messengers_location_recyclerView"
        />


</RelativeLayout>